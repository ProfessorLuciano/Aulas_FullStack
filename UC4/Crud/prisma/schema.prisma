generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Hierarquia {
  //id Int @id @default(autoincrement())
  id   String @id @default(uuid())
  nome String

  data_criacao   DateTime @default(now())
  data_alteracao DateTime @updatedAt

  funcionarios Funcionarios[]

  @@map("hierarquia")
}

model Funcionarios {
  id     String  @id @default(uuid())
  nome   String
  cpf    String  @unique
  email  String
  senha  String
  status Boolean @default(true)

  data_criacao   DateTime @default(now())
  data_alteracao DateTime @updatedAt

  hierarquia   Hierarquia @relation(fields: [idHierarquia], references: [id])
  idHierarquia String

  @@map("funcionarios")
}

model Produtos {
  id     String @id @default(uuid())
  nome   String
  preco  String
  banner String

  data_criacao   DateTime @default(now())
  data_alteracao DateTime @updatedAt

  @@map("produtos")
}
